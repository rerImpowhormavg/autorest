@using Microsoft.Rest.Generator.Ruby
@using Microsoft.Rest.Generator.Ruby.Templates
@inherits Microsoft.Rest.Generator.Template<Microsoft.Rest.Generator.Ruby.OperationsTemplateModel>
@Header("# ")
@EmptyLine
module @Settings.Namespace
  #
  @WrapComment("# ", string.IsNullOrEmpty(Model.Documentation) ? Model.OperationName : Model.Documentation)
  #
  class @(Model.OperationName)

    #
    # Creates and initializes a new instance of the @Model.OperationName class.
    # @@param client service class for accessing basic functionality.
    #
    def initialize(client)
        @@client = client
    end

    @EmptyLine
    # @@return reference to the @(Model.Name)
    attr_reader :client

    @EmptyLine
    @foreach (var method in Model.MethodTemplateModels)
    {
    @:@(Include( new MethodTemplate(),method))
    @EmptyLine
    }
  end
end
