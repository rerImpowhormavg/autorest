{
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2016",
    "types" : ["node"],
    "lib": [
      "dom",
      "es2016"
    ],
    "experimentalDecorators": true,
    "newLine": "LF"
  },
  "exclude": [
    "node_modules"
  ]
}