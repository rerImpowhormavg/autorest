{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "module": "commonjs",
    "sourceMap": true,
    "newLine": "LF",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "stripInternal": true,
    "target": "es2017",
    "types": [
      "node"
    ],
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}