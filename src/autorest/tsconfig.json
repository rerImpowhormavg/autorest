{
  "compilerOptions": {
    "outDir": "dist",
    "noErrorTruncation": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "sourceMap": true,
    "newLine": "LF",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "stripInternal": true,
    "target": "esnext",
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "plugins": [
      {
        "name": "tslint-language-service",
        "configFile": "../../tslint.json"
      }
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "_lib",
    "lib/core/language-service"
  ]
}